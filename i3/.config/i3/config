client.background       #FFFFFF

# font
font pango:Noto Sans Mono 8

# Start i3bar to display a workspace bar
bar {
    position top
    strip_workspace_numbers yes
    font pango:Noto Sans Mono 8, pango:FontAwesome 9
    separator_symbol "|"
	position top
	status_command i3status -c ~/.config/i3/i3status.conf | ~/code/external/i3spotifystatus/pystatus.py
    colors {
        background #000000
        statusline #FFFFFF
        separator  #666666

        focused_workspace  #4C7899 #3F51B5 #FFFFFF
        active_workspace   #333333 #222222 #FFFFFF
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #2F343A #900000 #FFFFFF
        binding_mode       #2F343A #900000 #FFFFFF
    }
}


set $be     #8faf9f
set $yw     #f8f893
set $gn     #81c181
set $rd     #bf9b76
set $id     #f9f8ff
set $ce     #ceecee
set $sl     #7f7f7f
set $subtle #999999

# set some nice colors      border  background  text    indicator
client.focused              $ac     $subtle     $tx     $id
client.unfocused            $bg     $bg         $ia     $id
client.focused_inactive     $bg     $bg         $ac     $id
client.urgent               $ac     $ac         $tx     $id
#border & indicator are ignored
client.placeholder          $bg     $bg         $bg     $bg


# Start i3bar to display a workspace bar
bar {
    # i3bar_command i3bar
    # status_command i3status
    position top
    strip_workspace_numbers yes
    #tray_output none
    font pango:Economica, FontAwesome 12
    separator_symbol "⋆"

    # status_command i3status --config ~/.i3/i3status.conf
    # use patched i3status
    #status_command ~/src/i3status/i3status --config ~/.i3/i3status.conf
    #status_command i3bf
    #status_command ~/.i3/i3-conky-initscript.sh
	# i3bar position
	position top
    # tray_output primary
	# custom i3status.conf
    status_command i3status -c ~/.config/i3/i3status.conf

#   statusbar colors       border      background   text
    colors {
        background          $bg
        statusline          #FFFFFF
        separator           $tx
        focused_workspace   $ia        $ia        $tx
        active_workspace    $gn        $ac        $tx
        inactive_workspace  $bg        $fg        $ia
        urgent_workspace    $ac        $bg        $ac
    }
}


# compton
exec_always --no-startup-id compton -b --config ~/.config/i3/compton.conf

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master 0% # mute sound
# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause  #  cmus-remote --pause
bindsym XF86AudioPause exec playerctl play-pause  # cmus-remote --pause
bindsym XF86AudioNext exec playerctl next  # cmus-remote --next
bindsym XF86AudioPrev exec playerctl previous  # cmus-remote --prev

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

